{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Chrome against localhost",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}",
        "sourceMaps": true,
        "runtimeArgs": [
          "--remote-debugging-port=9222",
          "--disable-extensions"
        ],
        "file": "${workspaceFolder}/index.html"  // Adjust based on your file's location
      }
    ]
  }
  
